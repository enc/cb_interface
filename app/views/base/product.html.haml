.row
  .col-md-5
    %h1 Product
    %p.lead
      = @product.name
  .col-md-4
    - if @product.images
      = image_tag @product.images[@product.images.size-1]
.row
  .col-md-6
    %dl
      %dt Overview
      %dd!= @product.overview

      %dt Curchbase Url
      %dd= link_to @product.name, @product.crunchbase_url
  .col-md-6
    %h3 Milstones
    %ul.list-unstyled
      =render partial: 'milestone', collection: @product.milestones
